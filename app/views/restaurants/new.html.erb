<%= form_for(@restaurant) do |f| %>
 <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :category %>
  <%= f.select :category, [["chinese", "chinese" ], ["italian", "italian"], ["japanese", "japanese"], ["french", "french"], ["belgian", "belgian"]] %>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <%= f.submit %>
<% end %>

<%= link_to "see all restaurants", restaurants_path %>
